        }
      },
      {
        "locked@common_buttons.new_ui_button_panel": {
          "$new_ui_button_texture": "$locked_button_texture",
          "$text_color": "$locked_color",          
          "$content_alpha": "$locked_alpha",
          "$border_color": "$border_color_default",
