          "$border_color": "$border_color_hover_pressed",
          "$border_layer": 3,
          "$hover_state": true,
          "$button_press_offset": [ 0, 0 ],
          "layer": 2
        }
      },
      {
        "pressed@common_buttons.new_ui_button_panel": {
          "$new_ui_button_texture": "$pressed_button_texture",
          "$glyph_color": "$pressed_color",
          "$border_color": "$border_color_hover_pressed",
          "$border_layer": 3,
          "$pressed_state": true,
          "$button_press_offset": [ 0, 1 ],
