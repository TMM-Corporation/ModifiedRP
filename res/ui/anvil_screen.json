{
  "namespace": "anvil",

  //---------------------------------------------------------------------------
  // #region Different texture of text edit for Anvil dialog screen.
  //---------------------------------------------------------------------------

  "anvil_edit_box_indent": {
    "type": "image",
    "nineslice_size": 0.0,
    "texture": "textures/gui/container/anvil",
    "alpha": "$alpha",
    "uv": [ 0, 182 ],
    "uv_size": [ 112, 16 ]
  },

  "edit_box_indent_hover@anvil.anvil_edit_box_indent": {
    "uv": [ 0, 182 ],
    "uv_size": [ 112, 16 ],
    "alpha": 1.0
  },

  "edit_box_indent_disabled@anvil.anvil_edit_box_indent": {
    "uv": [ 0, 198 ],
    "uv_size": [ 112, 16 ],
    "alpha": 1.0
  },

  // #endregion

  //---------------------------------------------------------------------------
  // #region common items
  //---------------------------------------------------------------------------

  "generic_label": {
    "type": "label",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    // "color": [ 0.25, 0.25, 0.25, 1.0 ], //Modified
    "layer": 1
  },

  // #endregion

  //---------------------------------------------------------------------------
  // #region icon and text area (top quarter of screen)
  //---------------------------------------------------------------------------

  "title_label@anvil.generic_label": {
    "offset": [ 0, -4 ],
    "anchor_from": "bottom_middle", // the parent
    "anchor_to": "bottom_middle", // this control
    "text": "container.repair"
  },

  "text_edit_control@common.text_edit_box": {
    "anchor_from": "top_left", // the parent
    "anchor_to": "top_left", // this control
    "property_bag": {
      "#property_field": "#item_name"
    },
    "max_length": 30,
    "$text_edit_binding_name": "#text_box_item_name",
    "$text_edit_box_label_size": [ "default", 10 ],

    "locked_control": "locked",
    "default_control": "default",
    "hover_control": "hover",
    "pressed_control": "pressed",

    "controls": [
      {
        "clipper_panel": {
          "type": "panel",
          "size": [ "100% - 6px", "100% - 4px" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "clips_children": true,
          "$disabled_color|default": "$color",
          "controls": [
            {
              "display_text@common.text_edit_box_label": {
                "layer": 1,
                "size": "$text_edit_box_label_size",
                "min_size": [ "100%", 0 ],
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "$text_alpha|default": "$alpha",
                "$locked_text_alpha|default": "$disabled_alpha",
                "$locked_color|default": "$disabled_color"
              }
            }
          ]
        }
      },
      {
        "locked": {
          "type": "panel",
          "controls": [
            {
              "@anvil.edit_box_indent_disabled": {
                "$color": "$disabled_color",
                "$alpha": 1.0
              }
            }
          ]
        }
      },
      { "default@anvil.anvil_edit_box_indent": { } },
      { "hover@anvil.edit_box_indent_hover": { } },
      { "pressed@anvil.edit_box_indent_hover": { } }
    ]
  },

  // panel to position the top quarter of screen
  "icon_and_text_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "40%" ],
    "offset": [ 0, "5%" ],
    "controls": [ //Modified
      { "@anvil.anvil_title_and_text_panel": { } }
    ]
  },

  // panel for the title label
  "title_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "20%" ],
    "offset": [ 1, 0 ],
    "controls": [
      { "@anvil.title_label": { } }
    ]
  },

  // panel for the text edit box
  "text_edit_panel": {
    "type": "panel",
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "size": [ 112, 16 ], //Modified
    "offset": [ 17.5, -3.5 ], //Modified
    "controls": [
      { "@anvil.text_edit_control": { } }
    ]
  },

  // panel to position title label and text edit control
  "anvil_title_and_text_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "80%", "100%" ],
    "offset": [ "20%", 0 ],
    "controls": [
      { "@anvil.title_panel": { } },
      { "@anvil.text_edit_panel": { } }
    ]
  },

  //#endregion

  //---------------------------------------------------------------------------
  // #region recipe (input, material and results) area (2nd quarter of screen)
  //---------------------------------------------------------------------------

  "cross_out_icon": {
    "type": "image",
    "texture": "textures/gui/container/anvil", //Modified
    "size": [ 33, 23 ], //Modified
    "uv": [ 182, 0 ], //Modified
    "uv_size": [ 33, 23 ], //Modified
    "bindings": [
      {
        "binding_name": "#cross_out_icon",
        "binding_name_override": "#visible"
      }
    ]
  },

  //#endregion

  "anvil_item_slot": {
    "type": "panel",
    "controls":[
      {
        "@common.container_item": {
          "anchor_to": "center",
          "anchor_from": "center"
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // #region Separated recipe grid, for each anvil slot. By @ToxesFoxes
  //---------------------------------------------------------------------------

  "recipe_grid_input": {
    "type": "grid",
    "size": [ 18, 18 ], //Modified
    "anchor_from": "center",
    "anchor_to": "center",
    "grid_dimensions": [ 1, 1 ], //Modified
    "controls": [
      {
        "input_item_slot@anvil_item_slot": {
          "grid_position": [ 0, 0 ],
          "$item_collection_name": "anvil_input_items"
        }
      }
    ]
  },

  "recipe_grid_material": {
    "type": "grid",
    "size": [ 18, 18 ], //Modified
    "anchor_from": "center",
    "anchor_to": "center",
    "grid_dimensions": [ 1, 1 ], //Modified
    "controls": [
      {
        "material_item_slot@anvil_item_slot": {
          "grid_position": [ 0, 0 ], //Modified
          "$item_collection_name": "anvil_material_items"
        }
      }
    ]
  },

  "recipe_grid_yields": {
    "type": "grid",
    "size": [ 18, 18 ], //Modified
    "anchor_from": "center",
    "anchor_to": "center",
    "grid_dimensions": [ 1, 1 ], //Modified
    "controls": [
      {
        "yields": {
          "type": "panel",
          "grid_position": [ 0, 0 ], //Modified
          "controls": [
            {
              "@anvil.cross_out_icon": {
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  "recipe_grid_result": {
    "type": "grid",
    "size": [ 18, 18 ], //Modified
    "anchor_from": "center",
    "anchor_to": "center",
    "grid_dimensions": [ 5, 1 ],
    "controls": [
      {
        "result_item_slot@anvil_item_slot": {
          "grid_position": [ 0, 0 ], //Modified
          "$item_collection_name": "anvil_result_items"
        }
      }
    ]
  },

  // #endregion

  "cost_label@anvil.generic_label": {
    "shadow": true,
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [ 49, 0.5 ], //Modified
    "color": "#ff00ff",
    "text": "#text"
  },

  "recipe_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "60%" ],
    "offset": [ -53, 27.5 ], //Modified
    "controls": [ //Modified
      { "@anvil.recipe_grid_input": { //Added/Modified
          "offset": [ -8, -0.5 ]
        }
      }, 
      {
        "@anvil.recipe_grid_material": { //Added/Modified
          "offset": [ 48, -0.5 ]
        }
      },
      {
        "@anvil.recipe_grid_yields": { //Added/Modified
          "offset": [ 84.5, 0 ]
        }
      },
      {
        "@anvil.recipe_grid_result": { //Added/Modified
          "offset": [ 127.5, -0.5 ]
        }
      },
      {
        "@anvil.cost_label": {
          "color": [ 1.0, 0.37, 0.37, 1.0 ],
          "bindings": [
            {
              "binding_name": "#cost_text",
              "binding_name_override": "#text"
            },
            {
              "binding_name": "#cost_text_red",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "@anvil.cost_label": {
          "color": [ 0.5, 1.0, 0.125, 1.0 ],
          "bindings": [
            {
              "binding_name": "#cost_text",
              "binding_name_override": "#text"
            },
            {
              "binding_name": "#cost_text_green",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  // #endregion

  //---------------------------------------------------------------------------
  // #region screen
  //---------------------------------------------------------------------------

  "top_half_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100% - 14px", "50% - 14px" ],
    "offset": [ 7, 7 ],
    "controls": [
      { "@anvil.icon_and_text_panel": { } },
      { "@anvil.recipe_panel": { } }
    ]
  },

  "anvil_panel": {
    "type": "panel",
    "$use_compact_close_button": true, //Added/Modified
    "controls": [
      { "@common.misc_custom_screen": { } }, //Added/Modified
      { "@common.container_gamepad_helpers": { } },
      { "@common.container_keyboard_helpers_panel": { } }, //Added/Modified
      { "@common.screen_background": { } },
      {
        "@common.root_panel": {
          "layer": 1,
          "size": [ 182, 182 ],
          "controls": [
            { "@common.input_panel": { } },
            { "@common.common_panel": {
                "$dialog_background": "pc_container.dialog_background_anvil" //Added/Modified
              }
            },
            {
              "anvil_screen_inventory": {
                "type": "panel",
                "layer": 5,
                "controls": [
                  { "@anvil.top_half_panel": { } },
                  { "@common.inventory_panel_bottom_half_with_label": { } },
                  { "hotbar_grid@common.hotbar_grid_template": { } },
                  { "@common.inventory_take_progress_icon_button": { } }
                ]
              }
            },
            { "@common.inventory_selected_icon_button": { } }
          ]
        }
      }
    ]
  },
  "anvil_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": false,
    "close_on_player_hurt": "$close_on_player_hurt",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$visible_screen": "anvil.anvil_panel"
      },
      {
        "requires": "$pocket_screen",
        "$visible_screen": "anvil_pocket.anvil_panel",
        "$close_on_player_hurt": true
      }
    ],
    "controls": [
      { "screen@$visible_screen": { } }
    ]
  }
}

// #endregion

