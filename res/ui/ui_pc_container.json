          "type": "panel",
          "size": [ 18, 18 ],
          "controls": [
            {
              "@common.stack_count_label": {
                "visible": "$stack_count_visible"
              }
            },
            {
              "@$item_renderer": {
                "size": [ 18, 18 ]
              }
            },
            { "@common.durability_bar": { } }
