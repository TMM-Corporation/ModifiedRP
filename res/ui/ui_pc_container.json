  //For horse dialog screen
  "container_item_single": {
    "type": "panel",
    "layer": 1,
    "size": [ 18, 18 ],
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "$cell_image_size": [ 18, 18 ],
    "$cell_overlay_ref": "common.cell_overlay",
    "$button_ref": "common.container_slot_button_prototype",
    "$stack_count_visible": true,
    "$item_renderer": "common.item_renderer",
    "controls": [
      {
        "@horse.donkey_chest_container_image": { }
      },
      {
        "item": {
          "type": "panel",
          "size": [ 18, 18 ],
          "controls": [
            {
              "@common.stack_count_label": {
                "visible": "$stack_count_visible"
              }
            },
            {
              "@$item_renderer": {
                "size": [ 18, 18 ]
              }
            },
            { "@common.durability_bar": { } }
          ]
        }
      },
      { "item_cell_overlay_ref@$cell_overlay_ref": { } },
      { "item_button_ref@$button_ref": { } }
    ]
  },
  //For creative dialog screen
  "container_item_scroll": {
    "type": "panel",
    "layer": 1,
    "size": [ 18, 18 ],
    "anchor_to": "top_left",
