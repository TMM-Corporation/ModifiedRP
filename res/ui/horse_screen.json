
{
  "namespace": "horse",

  "renderer_bg": {
    "type": "image",
    "texture": "textures/gui/spritesheet",
    "uv": [ 0, 32 ],
    "uv_size": [ 8, 8 ],
    "nineslice_size": 1.0
  },

  "overlay_image": {
    "type": "image",
    "uv": [ 0, 0 ],
    "uv_size": [ 16, 16 ],
    "alpha": 0.5
  },

  "saddle_image@horse.overlay_image": {
    "texture": "textures/gui/newgui/empty_horse_slot_saddle"
  },

  "armor_image@horse.overlay_image": {
    "texture": "textures/gui/newgui/empty_horse_slot_armor"
  },

  //---------------------------------------------------------------------------
  // #region Added custom images.
  //---------------------------------------------------------------------------

  "horse_armor_cell_image": {
    "type": "image",
    "texture": "textures/gui/container/horse",
    "size": [ 18, 18 ],
    "uv": [ 0, 226 ],
    "uv_size": [ 18, 18 ],
    "layer": 3
  },

  "donkey_chest_container_image": {
    "type": "image",
    "texture": "textures/gui/container/horse",
    "size": [ 90, 54 ],
    "uv": [ 0, 172 ],
    "uv_size": [ 90, 54 ],
    "layer": 3,
    "bindings": [
      {
        "binding_name": "#is_chested",
        "binding_name_override": "#visible"
      }
    ]
  },

  // #endregion

  "horse_label@common.section_heading_label": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 10, 8 ],
    "text": "#text",  // is this a hack?
    "layer": 5,
    "bindings": [
      {
        "binding_name": "#horse_name_loc",
        "binding_name_override": "#text"
      }
    ]
  },

  "equip_grid": {
    "type": "grid",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "collection_name": "horse_equip_items",
    "grid_item_template": "@common.container_item",
    "grid_dimension_binding": "#equip_grid_dimensions",
    "$item_collection_name": "horse_equip_items",
    "bindings": [
      {
        "binding_name": "#equip_grid_dimensions"
      }
    ]
  },

  "inv_grid": {
    "type": "grid",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "layer": 3,
    "collection_name": "container_items",
    "grid_item_template": "@common.container_item",
    "grid_dimension_binding": "#inv_grid_dimensions",
    "$item_collection_name": "container_items",
    "bindings": [
      {
        "binding_name": "#inv_grid_dimensions"
      }
    ]
  },

  "inv_bg_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ 90, 54 ],
    "layer": 2,
    "controls": [
      { "@donkey_chest_container_image": {
          "bindings": [
            {
              "binding_name": "#is_chested",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "equip_panel": {
    "type": "panel",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "controls": [
      { "@horse.equip_grid": { } },
      {
        "@horse.horse_armor_cell_image": { //Added/Modified
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 0, 18 ],
          "bindings": [
            {
              "binding_name": "#has_armor_slot",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "saddle@horse.saddle_image": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ 16, 16 ],
          "offset": [ 1, 1 ],
          "layer": 4
        }
      },
      {
        "armor@horse.armor_image": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ 16, 16 ],
          "offset": [ 1, 19 ],
          "layer": 4,
          "bindings": [
            {
              "binding_name": "#has_armor_slot",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "inv_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 82, 17 ], //Modified
    "controls": [
      { "@horse.inv_bg_panel": { } },
      { "@horse.inv_grid": { } }
    ]
  },

  // "horse_panel": {
  //   "type": "panel",
  //   "size": [ "100%", "100%" ],
  //   "controls": [
  //     { "@horse.equip_panel": { } },
  //     { "@horse.inv_panel": { } }
  //   ]
  // },

  "horse_renderer": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ 54, 54 ],
    "controls": [
      {
        "horse_custom": {
          "type": "custom",
          "renderer": "live_horse_renderer",
          "layer": 4,
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "30%", "30%" ],
          "offset": [ "15%", "40%" ],
          "bindings": [
            {
              "binding_name": "#entity_id"
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Screens
  //---------------------------------------------------------------------------

  "horse_panel": {
    "type": "panel",
    "$use_compact_close_button": true,
    "controls": [
      { "@common.misc_label_screen": { } }, //Added/Modified
      { "@common.container_gamepad_helpers": { } },
      { "@common.container_keyboard_helpers_panel": { } }, //Added/Modified
      { "@common.screen_background": { } },
      {
        "@common.root_panel": {
          "layer": 1,
          "size": [ 182, 172 ],
          "controls": [
            { "@common.input_panel": { } },
            {
              "@common.common_panel": {
                "$dialog_background": "pc_container.dialog_background_horse" //Added/Modified
              }
            },

            { "horse_section_label@horse.horse_label": { } },
            { "@horse.inv_panel": { } },

            {
              "equipment@horse.equip_panel": {
                "offset": [ 10, 17 ] //Modified
              }
            },
            {
              "renderer@horse.horse_renderer": {
                "offset": [ 28, 17 ] //Modified
              }
            },

            { "@common.inventory_panel_bottom_half_with_label": { } },
            { "@common.hotbar_grid_template": { } },
            { "@common.inventory_selected_icon_button": { } }
          ]
        }
      }
    ]
  },

  "horse_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": false,
    "close_on_player_hurt": "$close_on_player_hurt",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$visible_screen": "horse.horse_panel"
      },
      {
        "requires": "$pocket_screen",
        "$visible_screen": "horse_pocket.horse_panel",
        "$close_on_player_hurt": true
      }
    ],
    "controls": [
      { "screen@$visible_screen": { } }
    ]
  }
}
